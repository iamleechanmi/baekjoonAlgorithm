package com.step05;

import java.util.Scanner;

public class Ex06 {

	public static void main(String[] args) {

		//OX퀴즈
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();

		String str = "";
		boolean flag = true;

		int score = 0;
		int tmp = 0;
		int cnt = 1;

		while (flag) {
			str = sc.next();

			if (cnt == n) {
				flag = false;
			}

			if (str.equals("O")) {
				tmp += 1;
			} else if (str.equals("X")) {
				tmp = 0;
			} 


			if (str.equals("\r\n")) {
				score += tmp;
				System.out.println(score);

				tmp = 0;
				score = 0;
				cnt++;
			}
		}
		sc.close();
	}

}

package com.step05;

import java.util.Scanner;

public class Ex06 {
	
	public static void main(String[] args) {
		
		//OX퀴즈
		Scanner sc = new Scanner(System.in);
		int cnt = sc.nextInt();
		String[] result = new String[cnt]; 
		
		for (int i=0; i<cnt; i++) {
			result[i] = sc.next();
			
			//점수 계산 메소드 호출
			score(result[i]);
		}
		sc.close();
	}

	private static void score(String result) {
		
		int score = 0;
		int tempScore = 0;
		
		for (int i=0; i<result.length(); i++) {
			
			if (result.charAt(i) == "O") {
				tempScore++;
			}
		}
	}
}
